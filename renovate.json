{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "driver_config.yml"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*(datasource=(?<datasource>.*?) )?depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s*.*?version.*\\\"(?<currentValue>.*)\\\""
      ]
    }
  ],
  "customDatasources": {
    "nvidia-grid": {
      "defaultRegistryUrlTemplate": "https://raw.githubusercontent.com/ganeshkumarashok/azhpc-extensions/refs/heads/master/NvidiaGPU/Nvidia-GPU-Linux-Resources.json",
      "transformTemplates": [
        "{ \"releases\": [ { \"version\": Latest.Category[Name=\"GRID\"].Versions^(DriverVersion)[0].DriverVersion, \"url\": Latest.Category[Name=\"GRID\"].Versions^(DriverVersion)[0].Driver[0].DirLink } ] }"
      ]
    }
  },
  "logLevelRemap": [
    {
      "matchMessage": "/^Custom manager fetcher/",
      "newLogLevel": "debug"
    },
    {
      "matchMessage": "/custom datasource/",
      "newLogLevel": "debug"
    }
  ]
}
