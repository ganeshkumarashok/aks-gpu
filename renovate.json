{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "prHourlyLimit": 0,
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "driver_config.yml"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*(datasource=(?<datasource>.*?) )?depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s*.*?version.*\\\"(?<currentValue>.*)\\\"",
        "url:\\s*\"(?<currentUrl>.*)\""
      ],
      "replaceStrings": [
        {
          "matchString": "version: \"{{{ currentValue }}}\"",
          "replaceString": "version: \"{{{ newValue }}}\""
        },
        {
          "matchString": "url: \"{{{ currentUrl }}}\"",
          "replaceString": "url: \"{{{ newUrl }}}\""
        }
      ]
    }
  ],
  "customDatasources": {
  "nvidia-driver": {
    "defaultRegistryUrlTemplate": "https://docs.nvidia.com/datacenter/tesla/drivers/releases.json",
    "transformTemplates": [
      "{ \"releases\": $map($reduce($map($keys($), function($k) { { \"key\": $k, \"value\": $lookup($, $k) } }), function($acc, $v) { $append($acc, $v.value.driver_info) }, []), function($info) { { \"version\": $info.release_version } }) }"
    ]
  },
  "nvidia-grid-driver": {
  "defaultRegistryUrlTemplate": "https://raw.githubusercontent.com/Azure/azhpc-extensions/master/NvidiaGPU/resources.json",
  "transformTemplates": [
    "{ \"releases\": $map(OS[Name = 'Linux'].Version[Name = 'Ubuntu'][Version = '22.x'].Driver[Type = 'GRID'].Version, function($ver) { { \"version\": $ver.Num, \"url\": $ver.DirLink } }) }"
   ]
 }
},
  "packageRules": [
    {
      "excludePackagePatterns": [".*"],
      "managers": ["regex"],
      "matchManagers": ["regex"],
      "enabled": true
    }
  ],
  "logLevelRemap": [
    {
      "matchMessage": "/^Custom manager fetcher/",
      "newLogLevel": "debug"
    },
    {
      "matchMessage": "/custom datasource/",
      "newLogLevel": "debug"
    }
  ]
}
